<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="yorat">

	<!-- Base Link -->
	<link name="base_link">
		<origin
        	xyz="0 0 0"
			rpy="0 0 0"/>

		<inertial>
      		<origin
        		xyz="0 0 0.03"
				rpy="0 0 0"/>
      		<mass 
      			value="0.500" />
      		<inertia
        		ixx="0.06"
		        ixy="-0.0002364"
		        ixz="-0.001197"
		        iyy="0.17386"
		        iyz="-0.00001544"
		        izz="0.20296" />
		</inertial>

		<visual>
      		<origin
        		xyz="0 0 0"
				rpy="0 0 0"/>
	      	<geometry>
	         	<box size="0.07 0.07 0.04"/>
	      	</geometry>
		</visual>

		<collision>
      		<origin
        		xyz="0 0 0"
				rpy="0 0 0"/>
	      	<geometry>
	         	<box size="0.07 0.07 0.04"/>
	      	</geometry>
		</collision>
	</link>

	<!-- Right Wheel Link -->
	<link name="right_wheel">

		<inertial>
      		<origin
        		xyz="0 0 0"
				rpy="0 0 0"/>
      		<mass 
      			value="0.1" />
      		<inertia
        		ixx="0.002467"
		        ixy="0"
		        ixz="0"
		        iyy="0.004411"
		        iyz="0"
		        izz="0.002467" />
		</inertial>

		<visual>
      		<origin
        		xyz="0 0 0"
				rpy="0 0 0"/>
	      	<geometry>
	         	<cylinder length="0.01" radius="0.02"/>
	      	</geometry>
		</visual>

		<collision>
      		<origin
        		xyz="0 0 0"
				rpy="0 0 0"/>
	      	<geometry>
	         	<cylinder length="0.01" radius="0.02"/>
	      	</geometry>
		</collision>
	</link>

	<!-- Right Wheel Joint -->
	<joint name="base_right_joint" type="continuous">
		<parent link="base_link"/>
		<child link="right_wheel"/>
    	<origin xyz="-0.02 -0.04 -0.01"
    		    rpy="1.57 0 0"/>
    	<axis xyz="0 0 -1" />
	</joint>


	<!-- Left Wheel Link -->
	<link name="left_wheel">

		<inertial>
      		<origin
        		xyz="0 0 0"
				rpy="0 0 0"/>
      		<mass 
      			value="0.1" />
      		<inertia
        		ixx="0.002467"
		        ixy="0"
		        ixz="0"
		        iyy="0.004411"
		        iyz="0"
		        izz="0.002467" />
		</inertial>

		<visual>
      		<origin
        		xyz="0 0 0"
				rpy="0 0 0"/>
	      	<geometry>
	         	<cylinder length="0.01" radius="0.02"/>
	      	</geometry>
		</visual>

		<collision>
      		<origin
        		xyz="0 0 0"
				rpy="0 0 0"/>
	      	<geometry>
	         	<cylinder length="0.01" radius="0.02"/>
	      	</geometry>
		</collision>
	</link>

	<!-- Left Wheel Joint -->
	<joint name="base_left_joint" type="continuous">
		<parent link="base_link"/>
		<child link="left_wheel"/>
    	<origin xyz="-0.02 0.04 -0.01"
    		    rpy="1.57 0 0"/>
    	<axis xyz="0 0 -1" />
	</joint>


	<!-- Caster Ball -->
	<link name="caster_wheel">

		<inertial>
      		<origin
        		xyz="0 0 0"
				rpy="0 0 0"/>
      		<mass 
      			value="0.3" />
      		<inertia
        		ixx="1.0001"
		        ixy="0"
		        ixz="0"
		        iyy="1.0001"
		        iyz="0"
		        izz="1.0" />
		</inertial>

		<visual>
      		<origin
        		xyz="0 0 0"
				rpy="0 0 0"/>
	      	<geometry>
	         	 <box size="0.005 0.07 0.01"/> <!--sphere radius="0.0035"/-->
	      	</geometry>
		</visual>

		<collision>
      		<origin
        		xyz="0 0 0"
				rpy="0 0 0"/>
	      	<geometry>
	         	 <box size="0.005 0.07 0.01"/> <!--sphere radius="0.0035"/-->
	      	</geometry>
		</collision>
	</link>

	<!-- Caster Wheel Joint -->
	<joint name="base_caster_joint" type="fixed">
		<parent link="base_link"/>
		<child link="caster_wheel"/>
    	<origin xyz="0.03 0 -0.025"
    		    rpy="0 0 0"/>
    	<axis xyz="0 0 0" />
	</joint>


	<gazebo reference="base_link">
		<material>Gazebo/Green</material>
	</gazebo>

	<gazebo reference="right_wheel">
		<material>Gazebo/DarkGrey</material>
		<mu1 value="1.0"/>
			<mu2 value="1.0"/>
			<kp value="10000000.0" />
			<kd value="1.0" />
			<fdir1 value="1 0 0"/>
	</gazebo>

	<gazebo reference="left_wheel">
		<material>Gazebo/DarkGrey</material>
		<mu1 value="1.0"/>
			<mu2 value="1.0"/>
			<kp value="10000000.0" />
			<kd value="1.0" />
			<fdir1 value="1 0 0"/>
	</gazebo>

	<gazebo reference="caster_wheel">
		<material>Gazebo/DarkGrey</material>
	</gazebo>

	<!-- Left Wheel Transmission -->
	<transmission name="left_wheel_transmission">
	  	<type>transmission_interface/SimpleTransmission</type>
	  	<joint name="base_left_joint">
	    	<hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>  
	  	</joint>
	  	<actuator name="left_wheel_actuator">
		    <mechanicalReduction>1</mechanicalReduction>
		    <hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
	  	</actuator>
	</transmission>
 
	<!-- Right Wheel Transmission -->
	<transmission name="right_wheel_transmission">
	 	<type>transmission_interface/SimpleTransmission</type>
	  	<joint name="base_right_joint">
	    	<hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>  
	  	</joint>
	  	<actuator name="right_wheel_actuator">
	    	<mechanicalReduction>1</mechanicalReduction>
	    	<hardwareInterface>hardware_interface/VelocityJointInterface</hardwareInterface>
	  	</actuator>
	</transmission>


	<gazebo>
  		<plugin name="gazebo_ros_control" filename="libgazebo_ros_control.so">
    		<legacyModeNS>true</legacyModeNS>
  		</plugin>
	</gazebo>

</robot>

