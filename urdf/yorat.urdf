<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="yorat">

	<!-- Base Link -->
	<link name="base_link">
		<origin
        	xyz="0 0 0"
			rpy="0 0 0"/>

		<inertial>
      		<origin
        		xyz="0 0 0.03"
				rpy="0 0 0"/>
      		<mass 
      			value="0.200" />
      		<inertia
        		ixx="0.6"
		        ixy="0"
		        ixz="0"
		        iyy="1.74"
		        iyz="0"
		        izz="2.02" />
		</inertial>

		<visual>
      		<origin
        		xyz="0 0 0"
				rpy="0 0 0"/>
	      	<geometry>
	         	<box size="0.07 0.07 0.06"/>
	      	</geometry>
		</visual>

		<collision>
      		<origin
        		xyz="0 0 0"
				rpy="0 0 0"/>
	      	<geometry>
	         	<box size="0.07 0.07 0.06"/>
	      	</geometry>
		</collision>
	</link>

	<!-- Right Wheel Link -->
	<link name="right_wheel">

		<inertial>
      		<origin
        		xyz="0 0 0"
				rpy="0 0 0"/>
      		<mass 
      			value="0.1" />
      		<inertia
        		ixx="0.01"
		        ixy="0"
		        ixz="0"
		        iyy="0.01"
		        iyz="0"
		        izz="0.01" />
		</inertial>

		<visual>
      		<origin
        		xyz="0 0 0"
				rpy="0 0 0"/>
	      	<geometry>
	         	<cylinder length="0.01" radius="0.02"/>
	      	</geometry>
		</visual>

		<collision>
      		<origin
        		xyz="0 0 0"
				rpy="0 0 0"/>
	      	<geometry>
	         	<cylinder length="0.01" radius="0.02"/>
	      	</geometry>
		</collision>
	</link>

	<!-- Right Wheel Joint -->
	<joint name="base_right" type="continuous">
		<parent link="base_link"/>
		<child link="right_wheel"/>
    	<origin xyz="-0.02 -0.04 -0.02"
    		    rpy="1.57 0 0"/>
    	<axis xyz="0 0 -1" />
	</joint>


	<!-- Left Wheel Link -->
	<link name="left_wheel">

		<inertial>
      		<origin
        		xyz="0 0 0"
				rpy="0 0 0"/>
      		<mass 
      			value="0.1" />
      		<inertia
        		ixx="0.01"
		        ixy="0"
		        ixz="0"
		        iyy="0.01"
		        iyz="0"
		        izz="0.01" />
		</inertial>

		<visual>
      		<origin
        		xyz="0 0 0"
				rpy="0 0 0"/>
	      	<geometry>
	         	<cylinder length="0.01" radius="0.02"/>
	      	</geometry>
		</visual>

		<collision>
      		<origin
        		xyz="0 0 0"
				rpy="0 0 0"/>
	      	<geometry>
	         	<cylinder length="0.01" radius="0.02"/>
	      	</geometry>
		</collision>
	</link>

	<!-- Left Wheel Joint -->
	<joint name="base_left" type="continuous">
		<parent link="base_link"/>
		<child link="left_wheel"/>
    	<origin xyz="-0.02 0.04 -0.02"
    		    rpy="1.57 0 0"/>
    	<axis xyz="0 0 1" />
	</joint>


	<!-- Caster Ball -->
	<link name="caster_wheel">

		<inertial>
      		<origin
        		xyz="0 0 0"
				rpy="0 0 0"/>
      		<mass 
      			value="0.05" />
      		<inertia
        		ixx="0.01"
		        ixy="0"
		        ixz="0"
		        iyy="0.01"
		        iyz="0"
		        izz="0.01" />
		</inertial>

		<visual>
      		<origin
        		xyz="0 0 0"
				rpy="0 0 0"/>
	      	<geometry>
	         	 <sphere radius="0.005"/>
	      	</geometry>
		</visual>

		<collision>
      		<origin
        		xyz="0 0 0"
				rpy="0 0 0"/>
	      	<geometry>
	         	 <sphere radius="0.005"/>
	      	</geometry>
		</collision>
	</link>

	<!-- Caster Wheel Joint -->
	<joint name="base_caster" type="fixed">
		<parent link="base_link"/>
		<child link="caster_wheel"/>
    	<origin xyz="0.03 0 -0.035"
    		    rpy="0 0 0"/>
    	<axis xyz="0 0 0" />
	</joint>


	<gazebo reference="base_link">
		<material>Gazebo/Green</material>
	</gazebo>

	<gazebo reference="right_wheel">
		<material>Gazebo/DarkGrey</material>
	</gazebo>

	<gazebo reference="left_wheel">
		<material>Gazebo/DarkGrey</material>
	</gazebo>

	<gazebo reference="caster_wheel">
		<material>Gazebo/DarkGrey</material>
	</gazebo>

</robot>

